{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.workleap.com/leap-deploy/v0/leap-deploy-folded.schema.json",
  "title": "Folded Workload Configuration",
  "description": "Schema for validating folded/resolved workload configurations with all overrides applied",
  "type": "object",
  "examples": [
    {
      "id": "my-application",
      "workloads": {
        "api": {
          "type": "api",
          "replicas": 5,
          "image": {
            "repository": "my-app",
            "tag": "1.0.0"
          },
          "ingress": {
            "pathPrefix": "/api",
            "fqdn": "api.example.com"
          }
        }
      }
    },
    {
      "version": "0",
      "id": "foobar",
      "workloads": {
        "workleap-minimal-service": {
          "type": "api",
          "annotations": {
            "apps.workleap.com/flavor": "service"
          },
          "image": {
            "repository": "minimal-service"
          },
          "replicas": 4
        },
        "workleap-sample-api": {
          "type": "api",
          "image": {
            "repository": "wl-mono-repo"
          },
          "ingress": {
            "pathPrefix": "/api"
          },
          "replicas": 5,
          "autoscaling": {
            "horizontal": {
              "minReplicas": 5,
              "maxReplicas": 20
            }
          },
          "resources": {
            "requests": {
              "cpu": "200m",
              "memory": "256Mi"
            }
          }
        },
        "workleap-sample-worker": {
          "type": "worker",
          "annotations": {
            "apps.workleap.com/flavor": "worker"
          },
          "image": {
            "repository": "wl-mono-repo"
          },
          "replicas": 3,
          "resources": {
            "requests": {
              "cpu": "500m",
              "memory": "512Mi"
            }
          }
        }
      }
    }
  ],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^0(\\.[0-9]+){0,2}$",
      "description": "Schema version - must be a v0 version (e.g., 0, 0.1, 0.1.0)"
    },
    "id": {
      "type": "string",
      "description": "Unique identifier for this deployment configuration"
    },
    "workloads": {
      "type": "object",
      "description": "Map of workload names to their folded configurations",
      "additionalProperties": {
        "$ref": "https://schemas.workleap.com/leap-deploy/v0/schema.json#/definitions/foldedWorkloadConfig"
      }
    }
  },
  "required": ["id", "workloads"],
  "additionalProperties": false
}
