{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.workleap.com/leap-deploy/v0/leap-deploy-folded.schema.json",
  "title": "Folded Workload Configuration",
  "description": "Schema for validating folded/resolved workload configurations with all overrides applied",
  "examples": [
    {
      "id": "my-application",
      "workloads": {
        "my-api": {
          "kind": "api",
          "replicas": 5,
          "image": {
            "repository": "my-app",
            "tag": "1.0.0"
          },
          "projectSource": {
            "path": "src/MyApp/MyApp.csproj"
          },
          "ingress": {
            "pathPrefix": "/api",
            "fqdn": "api.example.com"
          }
        }
      }
    },
    {
      "version": "0",
      "id": "foobar",
      "workloads": {
        "workleap-sample-api": {
          "kind": "api",
          "image": {
            "repository": "wl-mono-repo"
          },
          "ingress": {
            "pathPrefix": "/api"
          },
          "replicas": 5,
          "autoscaling": {
            "horizontal": {
              "minReplicas": 5,
              "maxReplicas": 20
            }
          },
          "resources": {
            "requests": {
              "cpu": "200m",
              "memory": "256Mi"
            }
          }
        },
        "workleap-sample-worker": {
          "kind": "worker",
          "annotations": {
            "apps.workleap.com/flavor": "worker"
          },
          "image": {
            "repository": "wl-mono-repo"
          },
          "replicas": 3,
          "resources": {
            "requests": {
              "cpu": "500m",
              "memory": "512Mi"
            }
          }
        }
      }
    }
  ],
  "type": "object",
  "required": [ "id", "workloads" ],
  "properties": {
    "version": {
      "description": "Schema version - must be a v0 version (e.g., 0, 0.1, 0.1.0)",
      "type": "string",
      "pattern": "^0(\\.[0-9]+){0,2}$"
    },
    "id": {
      "description": "Unique identifier for this deployment configuration",
      "type": "string"
    },
    "workloads": {
      "description": "Map of workload names to their folded configurations",
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/foldedWorkloadConfig"
      }
    }
  },
  "additionalProperties": false,
  "$defs": {
    "foldedWorkloadConfigConstraints": {
      "$ref": "https://schemas.workleap.com/leap-deploy/v0/schema.json#/$defs/requiredRootWorkloadConfigConstraints"
    },
    "foldedWorkloadConfig": {
      "description": "Resulting Workload configuration with all overrides applied for the target environment and region - includes required fields",
      "type": "object",
      "allOf": [
        {
          "$ref": "https://schemas.workleap.com/leap-deploy/v0/schema.json#/$defs/workloadConfig"
        },
        {
          "$ref": "#/$defs/foldedWorkloadConfigConstraints"
        }
      ]
    }
  }
}
