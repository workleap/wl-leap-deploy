{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.workleap.com/leap-deploy/v0/schema.json",
  "title": "Leap Deploy Configuration",
  "description": "Schema for leap-deploy.yaml configuration file",
  "examples": [
    {
      "id": "my-simple-application",
      "workloads": {
        "api": {
          "kind": "api",
          "replicas": 3,
          "image": {
            "repository": "my-app",
            "tag": "1.0.0"
          },
          "projectSource": {
            "path": "src/MyApp/MyApp.csproj"
          },
          "ingress": {
            "pathPrefix": "/api",
            "fqdn": "api.example.com"
          },
          "environments": {
            "prod": {
              "replicas": 5
            }
          }
        }
      }
    },
    {
      "id": "multi-region-overrides-example",
      "workloads": {
        "api": {
          "kind": "api",
          "replicas": 2,
          "image": {
            "repository": "my-api"
          },
          "ingress": {
            "pathPrefix": "/api"
          },
          "environments": {
            "prod": {
              "replicas": 3
            }
          },
          "regions": {
            "eu": {
              "replicas": 1,
              "environments": {
                "prod": {
                  "replicas": 2
                }
              }
            }
          }
        },
        "worker": {
          "kind": "worker",
          "replicas": 1,
          "image": {
            "repository": "my-worker"
          },
          "environments": {
            "staging": {
              "replicas": 2
            },
            "prod": {
              "replicas": 3
            }
          },
          "regions": {
            "na": {
              "environments": {
                "prod": {
                  "replicas": 5
                }
              }
            }
          }
        }
      }
    }
  ],
  "type": "object",
  "required": [ "id", "workloads" ],
  "properties": {
    "version": {
      "description": "Schema version - must be a v0 version (e.g., 0, 0.1, 0.1.0)",
      "type": "string",
      "pattern": "^0(\\.[0-9]+){0,2}$"
    },
    "id": {
      "description": "Unique identifier for this deployment configuration",
      "type": "string"
    },
    "workloads": {
      "description": "Map of workload names to their configurations",
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "allOf": [
          {
            "$ref": "#/$defs/workloadConfigWithOverrides"
          },
          {
            "$ref": "#/$defs/requiredRootWorkloadConfigConstraints"
          }
        ]
      }
    }
  },
  "additionalProperties": false,
  "$defs": {
    "requiredRootWorkloadConfigConstraints": {
      "type": "object",
      "required": [ "kind" ],
      "properties": {
        "kind": {}
      }
    },
    "projectSourceConfig": {
      "type": [ "object", "null" ],
      "required": [ "path" ],
      "properties": {
        "type": {
          "description": "Type of project source file",
          "enum": [ "auto", "csproj", "dockerfile" ],
          "default": "auto"
        },
        "path": {
          "description": "Path to the project source file (csproj or Dockerfile)",
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "imageConfig": {
      "type": "object",
      "properties": {
        "registry": {
          "description": "Container registry hostname",
          "type": "string"
        },
        "repository": {
          "description": "Image repository name",
          "type": "string"
        },
        "tag": {
          "description": "Image tag",
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "ingressConfig": {
      "type": [ "object", "null" ],
      "properties": {
        "pathPrefix": {
          "description": "Ingress path prefix",
          "type": "string"
        },
        "fqdn": {
          "description": "Fully qualified domain name",
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "autoscalingConfig": {
      "type": "object",
      "properties": {
        "vertical": {
          "type": "object",
          "properties": {
            "enabled": {
              "default": false,
              "type": "boolean"
            }
          },
          "additionalProperties": false
        },
        "horizontal": {
          "type": "object",
          "properties": {
            "enabled": {
              "default": true,
              "type": "boolean"
            },
            "minReplicas": {
              "default": 2,
              "type": "integer",
              "minimum": 1
            },
            "maxReplicas": {
              "default": 3,
              "type": "integer",
              "minimum": 1
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "workloadConfig": {
      "type": "object",
      "properties": {
        "kind": {
          "description": "Workload kind - either 'api' for API services or 'worker' for background workers",
          "enum": [ "api", "worker" ]
        },
        "annotations": {
          "description": "Kubernetes annotations",
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "labels": {
          "description": "Kubernetes labels",
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "replicas": {
          "description": "Number of replicas",
          "default": 2,
          "type": "integer",
          "minimum": 1
        },
        "autoscaling": {
          "$ref": "#/$defs/autoscalingConfig"
        },
        "resources": {
          "description": "Resource requests for the workload",
          "type": "object",
          "properties": {
            "requests": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": "string",
                  "pattern": "^[0-9]+(m|\\.[0-9]+)?$"
                },
                "memory": {
                  "type": "string",
                  "pattern": "^[0-9]+(Mi|Gi|Ki)$"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "image": {
          "$ref": "#/$defs/imageConfig"
        },
        "ingress": {
          "default": null,
          "$ref": "#/$defs/ingressConfig"
        },
        "projectSource": {
          "default": null,
          "$ref": "#/$defs/projectSourceConfig"
        }
      }
    },
    "workloadConfigWithEnvironmentOverrides": {
      "$ref": "#/$defs/workloadConfig",
      "properties": {
        "environments": {
          "description": "Environment-specific overrides within a region",
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/workloadConfig"
          }
        }
      }
    },
    "workloadConfigWithOverrides": {
      "$ref": "#/$defs/workloadConfigWithEnvironmentOverrides",
      "properties": {
        "regions": {
          "description": "Region-specific overrides (na, eu, etc.)",
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/workloadConfigWithEnvironmentOverrides"
          }
        }
      }
    }
  }
}
