{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.workleap.com/leap-deploy/v0/schema.json",
  "title": "Leap Deploy Configuration",
  "description": "Schema for leap-deploy.yaml configuration file",
  "examples": [
    {
      "id": "my-simple-application",
      "workloads": {
        "api": {
          "kind": "api",
          "replicas": 3,
          "image": {
            "repository": "my-app",
            "tag": "1.0.0"
          },
          "buildConfig": {
            "path": "src/MyApp/MyApp.csproj"
          },
          "ingress": {
            "pathPrefix": "/api",
            "fqdn": "api.example.com"
          },
          "environments": {
            "prod": {
              "replicas": 5
            }
          }
        }
      }
    },
    {
      "id": "multi-region-overrides-example",
      "workloads": {
        "api": {
          "kind": "api",
          "replicas": 2,
          "image": {
            "repository": "my-api"
          },
          "ingress": {
            "pathPrefix": "/api"
          },
          "environments": {
            "prod": {
              "replicas": 3
            }
          },
          "regions": {
            "eu": {
              "replicas": 1,
              "environments": {
                "prod": {
                  "replicas": 2
                }
              }
            }
          }
        },
        "worker": {
          "kind": "worker",
          "replicas": 1,
          "image": {
            "repository": "my-worker"
          },
          "environments": {
            "staging": {
              "replicas": 2
            },
            "prod": {
              "replicas": 3
            }
          },
          "regions": {
            "na": {
              "environments": {
                "prod": {
                  "replicas": 5
                }
              }
            }
          }
        }
      }
    }
  ],
  "type": "object",
  "required": [ "id", "workloads" ],
  "properties": {
    "version": {
      "description": "Schema version - must be a v0 version (e.g., 0, 0.1, 0.1.0)",
      "type": "string",
      "pattern": "^0(\\.[0-9]+){0,2}$"
    },
    "id": {
      "description": "Unique identifier for this deployment configuration",
      "type": "string"
    },
    "workloads": {
      "description": "Map of workload names to their configurations",
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "allOf": [
          {
            "$ref": "#/$defs/workloadConfigWithOverrides"
          },
          {
            "$ref": "#/$defs/requiredRootWorkloadConfigConstraints"
          }
        ]
      }
    }
  },
  "additionalProperties": false,
  "$defs": {
    "requiredRootWorkloadConfigConstraints": {
      "type": "object",
      "required": [ "kind" ],
      "properties": {
        "kind": {}
      }
    },
    "buildConfigConfig": {
      "type": [ "object", "null" ],
      "required": [ "path" ],
      "properties": {
        "path": {
          "description": "Path to the project source file (csproj or Dockerfile)",
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "imageConfig": {
      "type": "object",
      "properties": {
        "registry": {
          "description": "Container registry hostname",
          "type": "string"
        },
        "repository": {
          "description": "Image repository name",
          "type": "string"
        },
        "tag": {
          "description": "Image tag",
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "ingressConfig": {
      "type": [ "object", "null" ],
      "properties": {
        "pathPrefix": {
          "description": "Ingress path prefix",
          "type": "string"
        },
        "fqdn": {
          "description": "Fully qualified domain name",
          "type": "string"
        },
        "annotations": {
          "description": "Additional annotations for the Ingress resource",
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "probeConfig": {
      "type": "object",
      "description": "Health probe configuration (matches Kubernetes Probe spec) - if set, exactly one of httpGet or exec must be specified",
      "properties": {
        "httpGet": {
          "type": "object",
          "description": "HTTP GET probe configuration",
          "properties": {
            "path": {
              "description": "Path to access on the HTTP server",
              "type": "string"
            },
            "port": {
              "description": "Port name or number to access on the container",
              "oneOf": [
                { "type": "string" },
                { "type": "integer", "minimum": 1, "maximum": 65535 }
              ]
            },
            "host": {
              "description": "Host name to connect to, defaults to the pod IP",
              "type": "string"
            },
            "scheme": {
              "description": "Scheme to use for connecting to the host (HTTP or HTTPS)",
              "enum": ["HTTP", "HTTPS"]
            },
            "httpHeaders": {
              "description": "Custom headers to set in the request",
              "type": "array",
              "items": {
                "type": "object",
                "required": ["name", "value"],
                "properties": {
                  "name": {
                    "description": "Header name",
                    "type": "string"
                  },
                  "value": {
                    "description": "Header value",
                    "type": "string"
                  }
                },
                "additionalProperties": false
              }
            }
          },
          "additionalProperties": false
        },
        "exec": {
          "type": "object",
          "description": "Exec probe configuration",
          "properties": {
            "command": {
              "description": "Command to execute in the container",
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "additionalProperties": false
        },
        "initialDelaySeconds": {
          "description": "Number of seconds after the container has started before probes are initiated",
          "type": "integer",
          "minimum": 0
        },
        "periodSeconds": {
          "description": "How often (in seconds) to perform the probe",
          "type": "integer",
          "minimum": 1
        },
        "timeoutSeconds": {
          "description": "Number of seconds after which the probe times out",
          "type": "integer",
          "minimum": 1
        },
        "failureThreshold": {
          "description": "Minimum consecutive failures for the probe to be considered failed",
          "type": "integer",
          "minimum": 1
        },
        "successThreshold": {
          "description": "Minimum consecutive successes for the probe to be considered successful",
          "type": "integer",
          "minimum": 1
        },
        "terminationGracePeriodSeconds": {
          "description": "Duration in seconds the pod needs to terminate gracefully upon probe failure",
          "type": "integer",
          "minimum": 0
        }
      },
      "oneOf": [
        {
          "required": ["httpGet"],
          "properties": {
            "httpGet": true,
            "exec": false
          }
        },
        {
          "required": ["exec"],
          "properties": {
            "exec": true,
            "httpGet": false
          }
        }
      ],
      "additionalProperties": false
    },
    "probesConfig": {
      "type": "object",
      "description": "Health probes configuration",
      "properties": {
        "readiness": {
          "$ref": "#/$defs/probeConfig"
        },
        "liveness": {
          "$ref": "#/$defs/probeConfig"
        },
        "startup": {
          "$ref": "#/$defs/probeConfig"
        }
      },
      "additionalProperties": false
    },
    "autoscalingConfig": {
      "type": "object",
      "properties": {
        "vertical": {
          "type": "object",
          "properties": {
            "enabled": {
              "default": false,
              "type": "boolean"
            }
          },
          "additionalProperties": false
        },
        "horizontal": {
          "type": "object",
          "properties": {
            "enabled": {
              "default": true,
              "type": "boolean"
            },
            "minReplicas": {
              "default": 2,
              "type": "integer",
              "minimum": 1
            },
            "maxReplicas": {
              "default": 3,
              "type": "integer",
              "minimum": 1
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "workloadConfig": {
      "type": "object",
      "properties": {
        "kind": {
          "description": "Workload kind - either 'api' for API services or 'worker' for background workers",
          "enum": [ "api", "worker" ]
        },
        "annotations": {
          "description": "Kubernetes annotations",
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "labels": {
          "description": "Kubernetes labels",
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "replicas": {
          "description": "Number of replicas",
          "default": 2,
          "type": "integer",
          "minimum": 1
        },
        "autoscaling": {
          "$ref": "#/$defs/autoscalingConfig"
        },
        "resources": {
          "description": "Resource requests for the workload",
          "type": "object",
          "properties": {
            "requests": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": "string",
                  "pattern": "^[0-9]+(m|\\.[0-9]+)?$"
                },
                "memory": {
                  "type": "string",
                  "pattern": "^[0-9]+(Mi|Gi|Ki)$"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "image": {
          "$ref": "#/$defs/imageConfig"
        },
        "ingress": {
          "default": null,
          "$ref": "#/$defs/ingressConfig"
        },
        "probes": {
          "$ref": "#/$defs/probesConfig"
        },
        "buildConfig": {
          "default": null,
          "$ref": "#/$defs/buildConfigConfig"
        },
        "envVars": {
          "description": "Environment variables as key-value pairs",
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    },
    "workloadConfigWithEnvironmentOverrides": {
      "$ref": "#/$defs/workloadConfig",
      "properties": {
        "environments": {
          "description": "Environment-specific overrides within a region",
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/workloadConfig"
          }
        }
      }
    },
    "workloadConfigWithOverrides": {
      "$ref": "#/$defs/workloadConfigWithEnvironmentOverrides",
      "properties": {
        "regions": {
          "description": "Region-specific overrides (na, eu, etc.)",
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/workloadConfigWithEnvironmentOverrides"
          }
        }
      }
    }
  }
}
