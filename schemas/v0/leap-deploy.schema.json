{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.workleap.com/leap-deploy/v0/schema.json",
  "title": "Leap Deploy Configuration",
  "description": "Schema for leap-deploy.yaml configuration file",
  "type": "object",
  "examples": [
    {
      "id": "my-application",
      "workloads": {
        "api": {
          "type": "api",
          "replicas": 3,
          "image": {
            "repository": "my-app",
            "tag": "1.0.0"
          },
          "ingress": {
            "pathPrefix": "/api",
            "fqdn": "api.example.com"
          },
          "environments": {
            "prod": {
              "replicas": 5
            }
          }
        }
      }
    },
    {
      "version": "0",
      "id": "foobar",
      "workloads": {
        "workleap-sample-api": {
          "type": "api",
          "image": {
            "repository": "wl-mono-repo"
          },
          "ingress": {
            "pathPrefix": "/api"
          },
          "environments": {
            "dev": {
              "replicas": 1,
              "resources": {
                "requests": {
                  "cpu": "50m",
                  "memory": "64Mi"
                }
              },
              "autoscaling": {
                "horizontal": {
                  "minReplicas": 1,
                  "maxReplicas": 2
                }
              }
            },
            "staging": {
              "replicas": 2,
              "resources": {
                "requests": {
                  "cpu": "100m",
                  "memory": "128Mi"
                }
              }
            },
            "prod": {
              "replicas": 3,
              "autoscaling": {
                "horizontal": {
                  "minReplicas": 3,
                  "maxReplicas": 10
                }
              },
              "resources": {
                "requests": {
                  "cpu": "200m",
                  "memory": "256Mi"
                }
              }
            }
          },
          "regions": {
            "na": {
              "environments": {
                "prod": {
                  "replicas": 5,
                  "autoscaling": {
                    "horizontal": {
                      "minReplicas": 5,
                      "maxReplicas": 20
                    }
                  }
                }
              }
            },
            "eu": {
              "environments": {
                "prod": {
                  "namespace": "eu-prod",
                  "labels": {
                    "data-residency": "eu"
                  }
                }
              }
            }
          }
        },
        "workleap-sample-worker": {
          "type": "worker",
          "annotations": {
            "apps.workleap.com/flavor": "worker"
          },
          "ingress": null,
          "image": {
            "repository": "wl-mono-repo"
          },
          "environments": {
            "dev": {
              "replicas": 1,
              "autoscaling": {
                "horizontal": {
                  "enabled": false
                }
              }
            },
            "prod": {
              "replicas": 3,
              "resources": {
                "requests": {
                  "cpu": "500m",
                  "memory": "512Mi"
                }
              }
            }
          }
        },
        "workleap-minimal-service": {
          "type": "api",
          "annotations": {
            "apps.workleap.com/flavor": "service"
          },
          "image": {
            "repository": "minimal-service"
          },
          "environments": {
            "prod": {
              "replicas": 4
            }
          }
        }
      }
    }
  ],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^0(\\.[0-9]+){0,2}$",
      "description": "Schema version - must be a v0 version (e.g., 0, 0.1, 0.1.0)"
    },
    "id": {
      "type": "string",
      "description": "Unique identifier for this deployment configuration"
    },
    "workloads": {
      "description": "Map of workload names to their configurations",
      "type": "object",
      "additionalProperties": {
        "allOf": [
          { "$ref": "#/definitions/workloadConfigWithOverrides" },
          { "$ref": "#/definitions/requiredRootWorkloadConfigConstraints" }
        ]
      },
      "minProperties": 1
    }
  },
  "required": ["id", "workloads"],
  "additionalProperties": false,
  "definitions": {
    "requiredRootWorkloadConfigConstraints": {
      "type": "object",
      "properties": {
        "type": {}
      },
      "required": ["type"]
    },
    "foldedWorkloadConfigConstraints": {
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/requiredRootWorkloadConfigConstraints" }
      ]
    },
    "imageConfig": {
      "type": "object",
      "properties": {
        "registry": {
          "type": "string",
          "description": "Container registry hostname"
        },
        "repository": {
          "type": "string",
          "description": "Image repository name"
        },
        "tag": {
          "type": "string",
          "description": "Image tag"
        }
      },
      "additionalProperties": false
    },
    "ingressConfig": {
      "type": ["object", "null"],
      "properties": {
        "pathPrefix": {
          "type": "string",
          "description": "Ingress path prefix"
        },
        "fqdn": {
          "type": "string",
          "description": "Fully qualified domain name"
        }
      },
      "additionalProperties": false
    },
    "autoscalingConfig": {
      "type": "object",
      "properties": {
        "vertical": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            }
          },
          "additionalProperties": false
        },
        "horizontal": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "minReplicas": {
              "type": "integer",
              "minimum": 1
            },
            "maxReplicas": {
              "type": "integer",
              "minimum": 1
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "foldedWorkloadConfig": {
      "description": "Resulting Workload configuration with all overrides applied for the target environment and region - includes required fields",
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/workloadConfig" },
        { "$ref": "#/definitions/foldedWorkloadConfigConstraints" }
      ]
    },
    "workloadConfig": {
      "type": "object",
      "properties": {
        "type": {
          "enum": ["api", "worker"],
          "description": "Workload type - either 'api' for API services or 'worker' for background workers"
        },
        "annotations": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Kubernetes annotations"
        },
        "labels": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Kubernetes labels"
        },
        "replicas": {
          "type": "integer",
          "minimum": 1,
          "description": "Number of replicas"
        },
        "autoscaling": {
          "$ref": "#/definitions/autoscalingConfig"
        },
        "resources": {
          "type": "object",
          "properties": {
            "requests": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": "string",
                  "pattern": "^[0-9]+(m|\\.[0-9]+)?$"
                },
                "memory": {
                  "type": "string",
                  "pattern": "^[0-9]+(Mi|Gi|Ki)$"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "image": {
          "$ref": "#/definitions/imageConfig"
        },
        "ingress": {
          "$ref": "#/definitions/ingressConfig"
        }
      }
    },
    "workloadConfigWithEnvironmentOverrides": {
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/workloadConfig" }
      ],
      "properties": {
        "environments": {
          "type": "object",
          "description": "Environment-specific overrides within a region",
          "additionalProperties": {
            "$ref": "#/definitions/workloadConfig"
          }
        }
      }
    },
    "workloadConfigWithOverrides": {
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/workloadConfigWithEnvironmentOverrides" }
      ],
      "properties": {
        "regions": {
          "type": "object",
          "description": "Region-specific overrides (na, eu, etc.)",
          "additionalProperties": {
            "$ref": "#/definitions/workloadConfigWithEnvironmentOverrides"
          }
        }
      }
    }
  }
}
