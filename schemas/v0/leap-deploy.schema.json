{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.workleap.com/leap-deploy/v0/schema.json",
  "title": "Leap Deploy Configuration",
  "description": "Schema for leap-deploy.yaml configuration file",
  "type": "object",
  "examples": [
    {
      "id": "my-simple-application",
      "workloads": {
        "api": {
          "type": "api",
          "replicas": 3,
          "image": {
            "repository": "my-app",
            "tag": "1.0.0"
          },
          "ingress": {
            "pathPrefix": "/api",
            "fqdn": "api.example.com"
          },
          "environments": {
            "prod": {
              "replicas": 5
            }
          }
        }
      }
    },
    {
      "id": "multi-region-overrides-example",
      "workloads": {
        "api": {
          "type": "api",
          "replicas": 2,
          "image": { "repository": "my-api" },
          "ingress": { "pathPrefix": "/api" },
          "environments": {
            "prod": { "replicas": 3 }
          },
          "regions": {
            "eu": {
              "replicas": 1,
              "environments": {
                "prod": { "replicas": 2 }
              }
            }
          }
        },
        "worker": {
          "type": "worker",
          "replicas": 1,
          "image": { "repository": "my-worker" },
          "environments": {
            "staging": { "replicas": 2 },
            "prod": { "replicas": 3 }
          },
          "regions": {
            "na": {
              "environments": {
                "prod": { "replicas": 5 }
              }
            }
          }
        }
      }
    }
  ],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^0(\\.[0-9]+){0,2}$",
      "description": "Schema version - must be a v0 version (e.g., 0, 0.1, 0.1.0)"
    },
    "id": {
      "type": "string",
      "description": "Unique identifier for this deployment configuration"
    },
    "workloads": {
      "description": "Map of workload names to their configurations",
      "type": "object",
      "additionalProperties": {
        "allOf": [
          { "$ref": "#/definitions/workloadConfigWithOverrides" },
          { "$ref": "#/definitions/requiredRootWorkloadConfigConstraints" }
        ]
      },
      "minProperties": 1
    }
  },
  "required": ["id", "workloads"],
  "additionalProperties": false,
  "definitions": {
    "requiredRootWorkloadConfigConstraints": {
      "type": "object",
      "properties": {
        "type": {}
      },
      "required": ["type"]
    },
    "foldedWorkloadConfigConstraints": {
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/requiredRootWorkloadConfigConstraints" }
      ]
    },
    "imageConfig": {
      "type": "object",
      "properties": {
        "registry": {
          "type": "string",
          "description": "Container registry hostname"
        },
        "repository": {
          "type": "string",
          "description": "Image repository name"
        },
        "tag": {
          "type": "string",
          "description": "Image tag"
        }
      },
      "additionalProperties": false
    },
    "ingressConfig": {
      "type": ["object", "null"],
      "properties": {
        "pathPrefix": {
          "type": "string",
          "description": "Ingress path prefix"
        },
        "fqdn": {
          "type": "string",
          "description": "Fully qualified domain name"
        }
      },
      "additionalProperties": false
    },
    "autoscalingConfig": {
      "type": "object",
      "properties": {
        "vertical": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            }
          },
          "additionalProperties": false
        },
        "horizontal": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            },
            "minReplicas": {
              "type": "integer",
              "minimum": 1,
              "default": 2
            },
            "maxReplicas": {
              "type": "integer",
              "minimum": 1,
              "default": 3
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "foldedWorkloadConfig": {
      "description": "Resulting Workload configuration with all overrides applied for the target environment and region - includes required fields",
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/workloadConfig" },
        { "$ref": "#/definitions/foldedWorkloadConfigConstraints" }
      ]
    },
    "workloadConfig": {
      "type": "object",
      "properties": {
        "type": {
          "enum": ["api", "worker"],
          "description": "Workload type - either 'api' for API services or 'worker' for background workers"
        },
        "annotations": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Kubernetes annotations"
        },
        "labels": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Kubernetes labels"
        },
        "replicas": {
          "type": "integer",
          "minimum": 1,
          "description": "Number of replicas",
          "default": 2
        },
        "autoscaling": {
          "$ref": "#/definitions/autoscalingConfig"
        },
        "resources": {
          "type": "object",
          "description": "Resource requests for the workload",
          "properties": {
            "requests": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": "string",
                  "pattern": "^[0-9]+(m|\\.[0-9]+)?$"
                },
                "memory": {
                  "type": "string",
                  "pattern": "^[0-9]+(Mi|Gi|Ki)$"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "image": {
          "$ref": "#/definitions/imageConfig"
        },
        "ingress": {
          "$ref": "#/definitions/ingressConfig",
          "default": null
        }
      }
    },
    "workloadConfigWithEnvironmentOverrides": {
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/workloadConfig" }
      ],
      "properties": {
        "environments": {
          "type": "object",
          "description": "Environment-specific overrides within a region",
          "additionalProperties": {
            "$ref": "#/definitions/workloadConfig"
          }
        }
      }
    },
    "workloadConfigWithOverrides": {
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/workloadConfigWithEnvironmentOverrides" }
      ],
      "properties": {
        "regions": {
          "type": "object",
          "description": "Region-specific overrides (na, eu, etc.)",
          "additionalProperties": {
            "$ref": "#/definitions/workloadConfigWithEnvironmentOverrides"
          }
        }
      }
    }
  }
}
